<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/search_list_fragment_item_horizontal_padding"
	android:paddingTop="@dimen/search_list_fragment_item_vertical_padding"
	android:paddingRight="@dimen/search_list_fragment_item_horizontal_padding"
	android:paddingBottom="@dimen/search_list_fragment_item_vertical_padding"
	>
    
    <ImageView android:id="@+id/ownerProfileImageView"
        android:layout_width="@dimen/search_list_fragment_avatar_size"
        android:layout_height="@dimen/search_list_fragment_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:contentDescription="@null"/>
    
    <TextView android:id="@+id/answersCountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:singleLine="true"
        android:textStyle="bold"/>
    
    <TextView android:id="@+id/ownerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/ownerProfileImageView"
        android:layout_toLeftOf="@id/answersCountView"
        android:textAppearance="?android:textAppearanceSmall"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"/>
    
    <TextView android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ownerView"
        android:layout_below="@id/ownerView"
        android:minLines="1"
        android:maxLines="@integer/search_list_fragment_title_max_lines"
        android:textAppearance="?android:textAppearanceMedium"
        android:ellipsize="end"/>

</RelativeLayout>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hellomobilestackoverflow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET"/>
    
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.hellomobilestackoverflow.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.hellomobilestackoverflow.activity.SearchListActivity"
            android:label="@string/search_list_activity_title" />
        
        <activity
            android:name="com.example.hellomobilestackoverflow.activity.QuestionDetailsActivity"
            android:label="@string/question_details_activity_title" />
        
    </application>

</manifest>
